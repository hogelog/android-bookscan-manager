<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.hogel.android.bookscan_manager.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.hogel.android.bookscan_manager.app.BookListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.hogel.android.bookscan_manager.app.BookDetailActivity"
            android:label="@string/title_book_detail"
            android:parentActivityName="org.hogel.android.bookscan_manager.app.BookListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.hogel.android.bookscan_manager.app.BookListActivity" />
        </activity>
    </application>

</manifest>
